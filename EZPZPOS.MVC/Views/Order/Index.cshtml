@model IEnumerable<EZPZPOS.Models.OrderModels.OrderListItem>

@{
    ViewBag.Title = "Order Index";
}

<h2 class="col-md-12" style="text-align: center; font-weight: bolder; color: white;">Orders</h2>

@*<p>
    @Html.ActionLink("Create A New Order", "Create")
</p>*@

<p class="col-md-12" style="text-align: right; font-size: 16px;">@Html.ActionLink("Create A New Order", "Create", "Order", null, new { @class = "btn button-color" })</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in col-md-12" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table order-tableIndex table-striped table-hover table-bordered">
    <tr style="font-size: 18px;">
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.GuestId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDateTimeUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfOrder)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.MenuItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gratuity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrandTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td  style="font-weight: bold; color: darkblue;">
        @Html.DisplayFor(modelItem => item.OrderId)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.GuestId)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDateTimeUtc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeOfOrder)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.MenuItemId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Subtotal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gratuity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GrandTotal)
    </td>
    <td class="my-actionLinkTwo">
        @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
        @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
    </td>
</tr>
    }

</table>
