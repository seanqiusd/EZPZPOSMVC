@model IEnumerable<EZPZPOS.Models.OrderModels.OrderListItem>

@{
    ViewBag.Title = "Index";
}

<h2>Orders</h2>

<p>
    @Html.ActionLink("Create A New Order", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.OrderId)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.GuestId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OrderDateTimeUtc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.TypeOfOrder)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.MenuItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.Subtotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Gratuity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GrandTotal)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.OrderId)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.GuestId)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.FirstName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.LastName)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.OrderDateTimeUtc)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.TypeOfOrder)
    </td>
    @*<td>
        @Html.DisplayFor(modelItem => item.MenuItemId)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Quantity)
    </td>*@
    <td>
        @Html.DisplayFor(modelItem => item.Subtotal)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.Gratuity)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.GrandTotal)
    </td>
    <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.OrderId }) |
        @Html.ActionLink("Details", "Details", new { id = item.OrderId }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.OrderId })
    </td>
</tr>
    }

</table>
