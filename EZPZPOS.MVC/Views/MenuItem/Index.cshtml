@model IEnumerable<EZPZPOS.Models.MenuItemModels.MenuItemListItem>

@{
    ViewBag.Title = "Menu Item Index";
}

<h2 class="col-md-12" style="text-align: center; font-weight: bolder; color: white;">Menu Items</h2>

@*<p>
        @Html.ActionLink("Create New Menu Item", "Create")
    </p>*@

<p class="col-md-12" style="text-align: right; font-size: 16px;">@Html.ActionLink("Create New Menu Item", "Create", "MenuItem", null, new { @class = "btn button-color" })</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in col-md-12" role="alert">

        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table table-hover" id="menu-itemIndex" style="color: white;">
    <tr style="font-size: 18px;">
        <th>
            @Html.DisplayNameFor(model => model.MenuItemId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsAvailable)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr style="color: darkorange;">
            <td>
                @Html.DisplayFor(modelItem => item.MenuItemId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @*@Html.DisplayFor(modelItem => item.IsAvailable)*@
                @(item.IsAvailable?"Yes":"No")
            </td>
            <td class="my-actionLink">
                @Html.ActionLink("Edit", "Edit", new { id = item.MenuItemId }) |
                @Html.ActionLink("Details", "Details", new { id = item.MenuItemId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.MenuItemId })
            </td>
        </tr>
    }

</table>
